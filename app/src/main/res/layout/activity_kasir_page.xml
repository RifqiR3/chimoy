<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kasir_page"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50px">
            
            <RelativeLayout
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/makanan1"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/makanan1"/>
                
                <TextView
                    android:id="@+id/namaMakanan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chickenroll"
                    android:layout_toRightOf="@id/makanan1"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/hargaMakanan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.10.000"
                    android:layout_toRightOf="@id/makanan1"
                    android:layout_below="@id/namaMakanan1"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonMakanan1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#FFDE00"
                    android:layout_toRightOf="@id/makanan1"
                    android:layout_below="@+id/hargaMakanan1"
                    android:text="Masukkan"
                    android:layout_gravity="center_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/makanan2"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/makanan2"/>

                <TextView
                    android:id="@+id/namaMakanan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siomay"
                    android:layout_toRightOf="@id/makanan2"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/hargaMakanan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.10.000"
                    android:layout_below="@id/namaMakanan2"
                    android:layout_toRightOf="@+id/makanan2"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonMakanan2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#FFDE00"
                    android:layout_toRightOf="@id/makanan2"
                    android:layout_below="@+id/hargaMakanan2"
                    android:text="Masukkan"
                    android:layout_gravity="center_horizontal"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/makanan3"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:src="@drawable/makanan2"/>

                <TextView
                    android:id="@+id/namaMakanan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siomay"
                    android:layout_toRightOf="@id/makanan3"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/hargaMakanan3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.10.000"
                    android:layout_below="@id/namaMakanan3"
                    android:layout_toRightOf="@id/makanan3"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonMakanan3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#FFDE00"
                    android:layout_toRightOf="@id/makanan3"
                    android:layout_below="@+id/hargaMakanan3"
                    android:text="Masukkan"
                    android:layout_gravity="center_horizontal"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/kuningJadi"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/menuKeranjang1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/jmlItem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_below="@id/menuKeranjang1"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/hrgItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@id/menuKeranjang1"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:gravity="end"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>