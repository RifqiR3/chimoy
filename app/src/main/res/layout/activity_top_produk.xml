<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".laporan_keuangan_page"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="75px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Waktu"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="#fffcd4"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewHariIni"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FFDE00"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Hari Ini" />

                </androidx.cardview.widget.CardView>

                <!-- Middle CardView with TextView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewMingguIni"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fffcd4"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Minggu Ini" />

                </androidx.cardview.widget.CardView>

                <!-- Second CardView with TextView (positioned at the end) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBulanIni"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#fffcd4"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Bulan Ini" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="20dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!--Header-->
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Transaksi"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Penjualan"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textStyle="bold"/>

                </TableRow>

                <!--Data-->
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chickenroll"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="start"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rp.50.000"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="end"/>

                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Siomay"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="start"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rp.50.000"
                        android:padding="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="end"/>

                </TableRow>



            </TableLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>